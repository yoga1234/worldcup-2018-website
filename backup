// check if data already saved
    getIndexHomeData(dataShow.name)
    .then(function(response) {
      if(response == undefined) {
        console.log("data homepage belum ada di database");
        saveHomepageData(dataShow);
      } else {
        dataShow = response;
        mainTag.innerHTML = CONTENT_LOADER("homepage", dataShow)
      }
    })
    .catch(function(err) {
      console.log("Oops terjadi error: " + err);
    })

    getIndexTeamlistData()
    .then(function(response) {
      console.log(response)
      if(response == undefined) {
        console.log("homepage: data teamlist tidak ditemukan di database");
        console.log("homepage: getting teamlist data from API");
        TEAMPAGE_DATA()
        .then((data) => {
          dataShow = JSON.parse(data);
          return dataShow = {
            name: "teamlist data",
            teams: dataShow.teams
          }
          .then(function(data) {
            // save teamlist into indexeddb
            saveTeamlistData(data)
            console.log("homepage: data teamlist telah berhasil disimpan di database")
          })
          .catch(function(err) {
            console.log("homepage: teamlist get - " + err);
          })
        });
      } else {
        console.log("homepage: data teamlist dalam database ditemukan");
      }
    })
    .catch(function(err) {
      console.log(err);
    })